import string
import random
import secrets

def generar_contraseña (longitud=10):
    caracteres = string.ascii_letters + string.digits + string.punctuation

    # Generar una contraseña segura utilizando la función secrets.choice
    contraseña=''.join(secrets.choice(caracteres) for _ in range(longitud))

    return contraseña

longitud = int(input("Ingrese la longitud de la contraseña deseada:"))

contraseña_segura = generar_contraseña(longitud=10)
print("Contraseña segura generada" , contraseña_segura)

